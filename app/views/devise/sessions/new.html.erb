<div class = 'container'>
  <div class = 'jumbotron', style="background: url('/images/bookmark_background.jpg')">
    <img src = '/images/MarkIt_logo.png'><br />
    <p style = 'color: #ffffff'>Your premier location for bookmark management and sharing</p>
    <%= link_to 'Sign Up', new_user_registration_path, :class => 'btn btn-default' %>
  </div>

  <div class = 'row'>
    <div class = "col-md-8">
      <h2>Bookmark Management Made Easier</h2>
      <p>You're in control and management is the same regardless of which browser you're using</p>
      <h2>Share With Your Friends</h2>
      <p>But you don't need to exclude your enemies</p>
    </div>
    <div class = "col-md-4">
      <div class = 'well'>
        <h2 style='text-align:center'>Log in</h2><br />
        <div class = 'form-horizontal'>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <div class = 'col-md-4'>
                <%= f.label :email %>&nbsp;&nbsp;
              </div>
              <div class = 'col-md-8'>
                <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
              </div>
            </div>
            <br /><br />
            <div class="field pull-left">
              <div class = 'col-md-4'>
                <%= f.label :password %>&nbsp;&nbsp;
              </div>
              <div class = 'col-md-8'>
                <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
              </div>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>&nbsp;
                <%= f.label :remember_me %>
              </div><br />
            <% end -%>

            <div class="actions">
              <%= f.submit "Log in" , :class => 'btn btn-primary' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
