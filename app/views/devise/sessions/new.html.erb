<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, class: "input-sm", autofocus: true, placeholder: "Email" %>
  </div>
  <br />
  <div class="field">
    <%= f.password_field :password, class: "input-sm", autocomplete: "off", placeholder: "Password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %><br /><br />
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-success' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
