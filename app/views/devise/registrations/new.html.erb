<%= link_to image_tag('/images/MarkIt_logo_black.png'), root_url %>
<hr />

<div class="flash">
  <% if flash[:notice] %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:notice] %>
    </div>
  <% elsif flash.now[:alert] %>
    <div class="alert alert-danger">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash.now[:alert] %>
    </div>
  <% elsif flash[:alert] %>
    <div class="alert alert-warning">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:alert] %>
    </div>
  <% end %>
</div>
<div style="background-image: url('/images/bookmark_background.jpg')", class = "image-responsive">
  <!-- Begin form -->
  <div style = "color: #ffffff; text-align:center">
    <br />
    <h1>Sign Up</h1>
    <p>You're about to embark in a most enlightening experience</p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email, class: 'control-label' %>&nbsp;&nbsp;
        <%= f.email_field :email, autofocus: true %>
      </div><br />

      <div class="field">
        <%= f.label :password, class: 'control-label' %>&nbsp;&nbsp;

        <%= f.password_field :password, autocomplete: "off" %>&nbsp;
        <% if @minimum_password_length %>
        (<%= @minimum_password_length %> characters minimum)
        <% end %>
      </div><br />

      <div class="field">
        <%= f.label :password_confirmation, class: 'control-label' %>&nbsp;&nbsp;
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
      <br />
      <div class="actions">
        <%= f.submit "Sign up", class: 'btn btn-primary' %>
      </div>
    <% end %>
    <br />
    <br />
  </div>
  <!-- End form -->
</div>
<br />
<p style ="text-align: center">Already have an account? <%= render "devise/shared/links" %></p>
