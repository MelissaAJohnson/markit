<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, class: 'input-sm', autofocus: true, placeholder: 'Email' %>
  </div>
  <br />
  <div class="field">
    <%= f.password_field :password, class: 'input-sm', autocomplete: "off", placeholder: 'Password' %>
    <% if @minimum_password_length %>
      <%= @minimum_password_length %> characters minimum
    <% end %><br />
  </div>
  <br />
  <div class="field">
    <%= f.password_field :password_confirmation, class: 'input-sm', autocomplete: "off", placeholder: "Password confirmation" %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-success' %>
  </div>
<% end %>
<br />
Already have an account? <%= render "devise/shared/links" %>
