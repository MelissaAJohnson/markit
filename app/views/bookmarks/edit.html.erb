<h2>Edit Bookmark</h2>
<%= form_for [@bookmark.topic, @bookmark] do |f| %>
    <div class = 'form-group'>
      <%= f.text_field :url, class: 'form-control', placeholder: "Enter URL" %>
      <br />
      <%= f.submit "Save", class: 'btn btn-success' %>&nbsp;&nbsp;<%= link_to "Cancel", :back %>
    </div>
<% end %>
